PGPLOT_LIB_OBJ = jvtools_pgplot.o

jvtools_pgplotlib: $(PGPLOT_LIB_OBJ)
	$(AR) $(LIB_DIR1)/libjvtools_pgplot.a $(PGPLOT_LIB_OBJ)
	$(AR2) $(LIB_DIR1)/libjvtools_pgplot.a

#
#
#
jvtools_pgplot.o: jvtools_pgplot.cc
	$(CPP) $(CCFLAGS) -c jvtools_pgplot.cc

#
#
#

###############################################################################
# 
# 
#
###############################################################################
clean:
	$(RM) *.o
